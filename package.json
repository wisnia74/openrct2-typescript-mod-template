{
  "name": "openrct2-mod-template",
  "version": "1.0.0",
  "description": "My template repo for OpenRCT2 mods.",
  "main": "init.js",
  "scripts": {
    "start": "nodemon --watch ./src --ext ts",
    "build:develop": "tsc --project tsconfig-develop.json",
    "build": "npm run lint && tsc --project tsconfig-prod.json",
    "lint": "eslint ./src/*.ts",
    "test": "jest --verbose=false",
    "test:dev": "jest --onlyChanged --verbose --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wisnia74/openrct2-mod-template.git"
  },
  "keywords": [
    "openrct2",
    "mod",
    "game"
  ],
  "author": "wisnia74",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wisnia74/openrct2-mod-template/issues"
  },
  "homepage": "https://github.com/wisnia74/openrct2-mod-template#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.2.2",
    "nodemon": "^2.0.4",
    "typescript": "^3.9.7"
  }
}
